{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "Services Healthy",
      "description": "Number of services currently responding to HTTP health checks",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "count(service_up == 1)",
          "legendFormat": "Healthy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "green", "value": 5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Services Down",
      "description": "Number of services failing HTTP health checks",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "count(service_up == 0) OR vector(0)",
          "legendFormat": "Down"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Total Monitored",
      "description": "Total number of services being health-checked",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "count(service_up)",
          "legendFormat": "Services"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "Overall Health",
      "description": "Percentage of services that are healthy",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "(count(service_up == 1) / count(service_up)) * 100",
          "legendFormat": "Health %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 100 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Service Status",
      "description": "Current UP/DOWN status of each discovered service",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "service_up",
          "legendFormat": "{{service}}:{{port}}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "service_response_ms",
          "legendFormat": "{{service}}:{{port}}",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "service_http_status",
          "legendFormat": "{{service}}:{{port}}",
          "format": "table",
          "instant": true,
          "refId": "C"
        }
      ],
      "transformations": [
        {
          "id": "seriesToColumns",
          "options": {
            "byField": "service"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "__name__": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "__name__ 3": true,
              "job": true,
              "job 1": true,
              "job 2": true,
              "job 3": true,
              "instance": true,
              "instance 1": true,
              "instance 2": true,
              "instance 3": true,
              "port 1": true,
              "port 2": true,
              "port 3": true
            },
            "renameByName": {
              "service": "Service",
              "port": "Port",
              "Value #A": "Status",
              "Value #B": "Response (ms)",
              "Value #C": "HTTP Code"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Status" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "options": { "0": { "text": "DOWN", "color": "red" } }, "type": "value" },
                  { "options": { "1": { "text": "UP", "color": "green" } }, "type": "value" }
                ]
              },
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-background" }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Response (ms)" },
            "properties": [
              {
                "id": "unit",
                "value": "ms"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 500 },
                    { "color": "red", "value": 2000 }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-text" }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 6,
      "title": "Service Health Over Time",
      "description": "Health status history for all discovered services",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "service_up",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "stacking": { "mode": "none" }
          },
          "min": 0,
          "max": 1,
          "mappings": [
            { "options": { "0": { "text": "DOWN" } }, "type": "value" },
            { "options": { "1": { "text": "UP" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "id": 7,
      "title": "Response Time Over Time",
      "description": "HTTP response times for all discovered services",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "service_response_ms",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 2000 }
            ]
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "prometheus" }
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "title": "Service Health",
  "uid": "service-health"
}
