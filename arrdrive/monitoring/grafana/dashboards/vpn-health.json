{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "VPN Status",
      "description": "1 = Connected, 0 = Disconnected",
      "type": "stat",
      "gridPos": { "h": 6, "w": 4, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_status",
          "legendFormat": "VPN"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" } }, "type": "value" },
            { "options": { "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "title": "IP Protection",
      "description": "1 = Gluetun API IP differs from host IP (protected), 0 = IPs match or check failed (exposed)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 4, "x": 4, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_ip_different",
          "legendFormat": "IP Check"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "EXPOSED", "color": "red" } }, "type": "value" },
            { "options": { "1": { "text": "PROTECTED", "color": "green" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "VPN Uptime",
      "description": "Time since gluetun container last restarted",
      "type": "stat",
      "gridPos": { "h": 6, "w": 4, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_uptime_seconds",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 3600 },
              { "color": "green", "value": 86400 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Connection Failures (Total)",
      "description": "Cumulative VPN connectivity failures detected",
      "type": "stat",
      "gridPos": { "h": 6, "w": 3, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_connection_failures_total",
          "legendFormat": "Failures"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 10,
      "title": "Public IP Addresses",
      "description": "Current public IPs detected from each source",
      "type": "table",
      "gridPos": { "h": 6, "w": 9, "x": 15, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_public_ip_info",
          "format": "table",
          "instant": true,
          "legendFormat": ""
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "source": "Source",
              "ip": "IP Address"
            },
            "indexByName": {
              "source": 0,
              "ip": 1
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "cellOptions": { "type": "auto" }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Source" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "options": { "gluetun_api": { "text": "Gluetun API" } }, "type": "value" },
                  { "options": { "vpn": { "text": "icanhazip (via VPN)" } }, "type": "value" },
                  { "options": { "host": { "text": "icanhazip (direct)" } }, "type": "value" }
                ]
              },
              { "id": "custom.width", "value": 170 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "IP Address" },
            "properties": [
              { "id": "custom.width", "value": 150 }
            ]
          }
        ]
      }
    },
    {
      "id": 7,
      "title": "VPN Public IP",
      "description": "Current VPN public IP from Gluetun API",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 15, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_public_ip_info{source=\"gluetun_api\"}",
          "legendFormat": "{{ip}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "color": { "fixedColor": "blue", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "textMode": "name",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 8,
      "title": "Host Public IP",
      "description": "Current host public IP from icanhazip.com (direct, no VPN)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 19, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_public_ip_info{source=\"host\"}",
          "legendFormat": "{{ip}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          },
          "color": { "fixedColor": "purple", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "textMode": "name",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 4,
      "title": "VPN Status & IP Protection Over Time",
      "description": "VPN connectivity and IP protection history",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 15, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_status",
          "legendFormat": "VPN Status"
        },
        {
          "expr": "vpn_ip_different",
          "legendFormat": "IP Protected"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "min": 0,
          "max": 1,
          "mappings": [
            { "options": { "0": { "text": "DOWN" } }, "type": "value" },
            { "options": { "1": { "text": "UP" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      }
    },
    {
      "id": 9,
      "title": "icanhazip Response Time",
      "description": "Response time in milliseconds for icanhazip.com (VPN vs Direct)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "vpn_icanhazip_response_ms",
          "legendFormat": "Via VPN"
        },
        {
          "expr": "host_icanhazip_response_ms",
          "legendFormat": "Direct (no VPN)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "gradientMode": "scheme"
          },
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "orange", "value": 1000 },
              { "color": "red", "value": 3000 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Failure Rate (per hour)",
      "description": "Rate of VPN failures over the last hour",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 26 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "increase(vpn_connection_failures_total[1h])",
          "legendFormat": "Failures / hour"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 50
          },
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "prometheus" }
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "title": "VPN Health",
  "uid": "vpn-health"
}
